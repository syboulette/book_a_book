<h1>New Book:</h1>
<p><%= link_to "Back to browing books.", root_path %></p>
<%= simple_form_for(@book) do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :genre %>
  <%= f.input :date_of_publication %>
  <%= f.input :daily_price %>
  <%= f.input :language %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
